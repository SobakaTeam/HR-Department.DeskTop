<Window x:Class="WpfApp2.WindowsAddDepartament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="WindowsAddDepartament" Height="450" Width="800">
    <Grid>
        <Grid.OpacityMask>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA25F5F" Offset="0.25"/>
                <GradientStop Color="#FFEFEFEF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.OpacityMask>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF5B70AF" Offset="0.1"/>
                <GradientStop Color="#FF5FB3C8" Offset="0.796"/>
                <GradientStop Color="#FF7EBDB6" Offset="0.462"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Center" Height="303" VerticalAlignment="Center" Width="559" Stroke="Black" Opacity="0.7" RadiusX="21.54" RadiusY="21.54">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8497E4"/>
                    <GradientStop Color="#FF3B59D2" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button Content="Зарегестрировать" HorizontalAlignment="Center" Margin="0,296,0,0" VerticalAlignment="Top" Height="33" Width="192" Click="Button_Click_1" Background="#FF813528">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
     BorderBrush="{TemplateBinding BorderBrush}"
     BorderThickness="{TemplateBinding BorderThickness}"
     CornerRadius="10">
                        <!-- Измените это значение для настройки скругления -->
                        <ContentPresenter HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="192" Height="30" SelectionTextBrush="White" FontFamily="Times New Roman" FontSize="18"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="192" Height="30" Margin="0,249,0,0" FontFamily="Times New Roman" FontSize="18"/>
        <Image HorizontalAlignment="Left" Height="38" Margin="261,194,0,0" VerticalAlignment="Top" Width="38" Source="/department.png" Stretch="Fill"/>
        <Image HorizontalAlignment="Left" Height="38" Margin="261,241,0,0" VerticalAlignment="Top" Width="38" Stretch="Fill" Source="/hostDepartment.png"/>
        <Label Content="Регестрация Учереждения" HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="20" BorderBrush="Black" Foreground="White"/>

    </Grid>
</Window>
