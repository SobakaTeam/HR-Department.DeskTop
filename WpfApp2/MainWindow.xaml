<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:WpfApp2.view"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF2596C1">
        
        <Canvas Margin="158,67,158,66">
            <Rectangle Height="301" VerticalAlignment="Center" Opacity="0.7" HorizontalAlignment="Center" Width="484" RadiusX="21.54" RadiusY="21.54">
                <Rectangle.Stroke>
                    <RadialGradientBrush>
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FF404040" Offset="0.619"/>
                    </RadialGradientBrush>
                </Rectangle.Stroke>
                <Rectangle.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.55"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FF3A3A3A" Offset="0.315"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Label Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="1.403,-0.209" FontFamily="Comic Sans MS" FontSize="24" Foreground="White" Canvas.Left="163"/>
            <Image x:Name="user" HorizontalAlignment="Left" Height="42" VerticalAlignment="Center" Width="43" RenderTransformOrigin="0.494,0.531" Stretch="Fill" Source="/user_icon.png" Canvas.Left="59" Canvas.Top="116"/>
            <Image x:Name="locked" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="43" RenderTransformOrigin="0.494,0.531" Stretch="Fill" Source="/locked_icon.png" Canvas.Left="59" Canvas.Top="164"/>
            <TextBox x:Name="login"  HorizontalAlignment="Center" TextWrapping="Wrap" Width="232" Height="35" VerticalAlignment="Top" Canvas.Left="126" Canvas.Top="123" FontSize="18"   >
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="60" Color="LightBlue" ShadowDepth="0" />
                </TextBox.Effect>
            </TextBox>
            <Button x:Name="avto" Content="Авторизация"   HorizontalAlignment="Center" Width="232" Height="33" VerticalAlignment="Top" Canvas.Left="126" Canvas.Top="230" Click="Button_Click" Background="#FF00CAFF" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FFFBFBFB" Cursor="Hand">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                     BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     CornerRadius="10">
                            <!-- Измените это значение для настройки скругления -->
                            <ContentPresenter HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />

                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Image x:Name="eye" HorizontalAlignment="Center" Height="36" VerticalAlignment="Top" Width="37" Stretch="Fill" Source="/eye_icon.png" Canvas.Left="363" Canvas.Top="174" MouseLeftButtonDown="eye_MouseLeftButtonDown" Cursor="Hand"/>
            <Image x:Name="eyeLocked" Height="36" Width="37" Stretch="Fill" Source="/eye_off_icon.png" Canvas.Left="363" Canvas.Top="174" HorizontalAlignment="Center" VerticalAlignment="Top" MouseLeftButtonDown="eyeLocked_MouseLeftButtonDown" Cursor="Hand"/>
            <PasswordBox x:Name="passwordBox" Canvas.Left="126" Canvas.Top="175" Width="232" Height="33"  HorizontalAlignment="Center" VerticalAlignment="Center"  PasswordChar="•" FontSize="18" Password="" MaxLength="8"/>
            <TextBox x:Name="passwordBoxNew" TextWrapping="Wrap" Width="232" Height="33" Canvas.Left="126" Canvas.Top="175" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding SecurePassword, ElementName=passwordBox, Mode=OneWay}" MaxLength="8" >
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="60" Color="LightBlue" ShadowDepth="0" />
                </TextBox.Effect>
            </TextBox>
            <Image Height="75" Canvas.Left="201" Canvas.Top="43" Width="82" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/ava1.jpg" Stretch="Fill" RenderTransformOrigin="0.5,0.501"/>
        </Canvas>
    </Grid>
</Window>
